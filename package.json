{
  "name": "glob-tool-embed",
  "version": "1.0.0",
  "description": "A portable, embeddable version of the DO Community Glob tool.",
  "license": "Apache-2.0",
  "source": "src/index.js",
  "main": "build/bundle.js",
  "scripts": {
    "build": "parcel build src/index.js -d build --out-file bundle.js --experimental-scope-hoisting",
    "watch": "parcel watch src/index.js -d build --out-file bundle.js",
    "test": "eslint 'src/**/*.js'",
    "test:fix": "npm run test -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/do-community/glob-tool-embed.git"
  },
  "keywords": [
    "glob"
  ],
  "author": "DigitalOcean",
  "bugs": {
    "url": "https://github.com/do-community/glob-tool-embed/issues"
  },
  "homepage": "https://github.com/do-community/glob-tool-embed#readme",
  "devDependencies": {
    "eslint": "^7.7.0",
    "parcel-bundler": "^1.12.4"
  },
  "dependencies": {
    "minimatch": "^3.0.4"
  }
}
